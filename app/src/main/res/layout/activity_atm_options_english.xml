<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#70000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:id="@+id/mainText"
        android:fontFamily="@font/bangers"
        android:text="JAVA's  ATM"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please Select Options From Below"
        android:id="@+id/selectOptions"
        android:textColor="@color/white"
        android:layout_margin="20dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mainText"/>
    <android.widget.Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/withdraw"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="30dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="Withdrawal"
        android:background="@drawable/buttons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/selectOptions"/>
    <android.widget.Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/balanceCheck"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="30dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="Balance Enquiry"
        android:background="@drawable/buttons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/withdraw"/>


</androidx.constraintlayout.widget.ConstraintLayout>