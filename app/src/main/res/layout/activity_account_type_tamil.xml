<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#70000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:id="@+id/mainTextTam"
        android:fontFamily="@font/bangers"
        android:text="ஜாவாவின் ஏ.டி.எம்"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="உங்கள் கணக்கின் வகையைத் தேர்ந்தெடுக்கவும்"
        android:id="@+id/selectAccTypeTam"
        android:padding="10dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_margin="20dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mainTextTam"/>
    <android.widget.Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/savingsAccountTam"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="30dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="சேமிப்பு கணக்கு"
        android:background="@drawable/buttons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/selectAccTypeTam"/>
    <android.widget.Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/currentAccountTam"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="30dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="நடப்புக் கணக்கு"
        android:background="@drawable/buttons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/savingsAccountTam"/>


</androidx.constraintlayout.widget.ConstraintLayout>